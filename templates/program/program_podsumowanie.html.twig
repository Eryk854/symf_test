                {% set counter = 1 %}
                <td>{% for suma in sumy_godzin_praktyki_semestr %}
                        <li>Semestr: {{ counter }}, suma godzin: {{ suma }}</li>
                        {%  set counter=counter+1 %}
                    {% endfor %}</td>
            </tr>

            <tr>
                <td>Liczba sylabusów zatwierdzonych</td>
                <td>{{ l_zatw_syl }}</td>
            </tr>

            <tr>
                <td>Lista niezatwierdzonych sylabusów</td>
                <td>{% for value in l_niezatw_syb %}
                        <li><a href="{{ path('sylabusForm', {'id': value.id }) }}">Sylabus {{ value.numerKatalogowy }}</a></li>
                    {% endfor %}</td>
            </tr>
        </table>
    </div>

    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
        table, td, tr {
            border: 1px solid black;
            border-collapse: collapse;
            text-align: center;
        }
        .td_smallFontSize {
            font-size: 11px;
        }

        table {
            width: 100%;
        }
    </style>
{% endblock %}