{% extends 'base.html.twig' %}

{% block title %}Podsumowanie programu studiów{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h2>Podsumowanie programu studiów</h2><br/>

        <table>
            <tr>
                <td>Nazwa</td>
                <td>{{ nazwa }}</td>
            </tr>

            <tr>
                <td>Wydział</td>
                <td>{{ wydzial }}</td>
            </tr>

            <tr>
                <td>Kierunek</td>
                <td>{{ kierunek }}</td>
            </tr>

            <tr>
                <td>Typ</td>
                <td>{{ typ }}</td>
            </tr>

            <tr>
                <td>Tryb</td>
                <td>{{ tryb }}</td>
            </tr>

            <tr>
                <td>Liczba semestrów</td>
                <td>{{ l_semestrow }}</td>
            </tr>

            <tr>
                <td>Liczba zatwierdzonych sylabusów</td>
                <td>{{ l_zatw_syl }}</td>
            </tr>

            <tr>
                <td>Suma punktów ECTS dla semestrów</td>
                {% set counter = 1 %}
                <td>{% for suma in sumy_ects %}
                        <li>Semestr: {{ counter }}, suma punktów ECTS: {{ suma }}</li>
                        {%  set counter=counter+1 %}
                    {% endfor %}</td>
            </tr>

            <tr>
                <td>Suma punktów ECTS dla zajęć ze statusem 'podstawowe'</td>
                {% set counter = 1 %}
                <td>{% for suma in sumy_ects_zaj_podst %}
                        <li>Semestr: {{ counter }}, suma punktów ECTS: {{ suma }}</li>
                        {%  set counter=counter+1 %}
                    {% endfor %}</td>
            </tr>

            <tr>
                <td>Suma punktów ECTS dla zajęć ze statusem 'kierunkowe'</td>
                {% set counter = 1 %}
