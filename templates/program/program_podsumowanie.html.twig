{% extends 'base.html.twig' %}

{% block title %}Podsumowanie programu studiów{% endblock %}

{% block body %}
    <div class="example-wrapper">
        <h2>Podsumowanie programu studiów</h2><br/>

        <table>
            <tr>
                <td>Nazwa</td>
                <td>{{ program_podsumowanie.getNazwaProgramu }}</td>
            </tr>

            <tr>
                <td>Wydział</td>
                <td>{{ program_podsumowanie.getWydzial }}</td>
            </tr>

            <tr>
                <td>Kierunek</td>
                <td>{{ program_podsumowanie.getKierunek }}</td>
            </tr>

            <tr>
                <td>Typ</td>
                <td>{{ program_podsumowanie.getTyp }}</td>
            </tr>

            <tr>
                <td>Tryb</td>
                <td>{{ program_podsumowanie.getTryb }}</td>
            </tr>

            <tr>
                <td>Liczba semestrów</td>
                <td>{{ program_podsumowanie.getLiczbaSemestrow }}</td>
            </tr>

            <tr>
                <td>Suma punktów ECTS dla semestrów</td>
                {% set counter = 1 %}
                <td>{% for suma in program_podsumowanie.getSumyEctsDlaSemestru %}
                        <li>Semestr: {{ counter }}, suma punktów ECTS: {{ suma }}</li>
                        {%  set counter=counter+1 %}
                    {% endfor %}</td>
            </tr>

            <tr>
                <td>Suma punktów ECTS dla zajęć ze statusem 'podstawowe'</td>
                {% set counter = 1 %}
                <td>{% for suma in program_podsumowanie.getSumyEctsDlaStatusZajecPodstawowe %}
                        <li>Semestr: {{ counter }}, suma punktów ECTS: {{ suma }}</li>
                        {%  set counter=counter+1 %}
                    {% endfor %}</td>
            </tr>

            <tr>
                <td>Suma punktów ECTS dla zajęć ze statusem 'kierunkowe'</td>
                {% set counter = 1 %}
                <td>{% for suma in program_podsumowanie.getSumyEctsDlaStatusZajecKierunkowe %}
